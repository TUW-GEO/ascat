wget https://repo.continuum.io/miniconda/Miniconda3-4.7.12-Linux-x86_64.sh -O miniconda.sh
bash miniconda.sh -b -p $HOME/conda/ascat_conda
export PATH="$HOME/conda/ascat_conda/bin:$PATH"
conda config --set always_yes yes --set changeps1 no
conda create -q -n ascat_dev -c conda-forge python=3.6 numpy pandas netCDF4 pytest pip pyproj pybufr-ecmwf cython h5py pygrib
source activate ascat_dev
pip install pygeobase pygeogrids pynetcf lxml autopep8